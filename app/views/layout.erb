            <li class="nav-item">
              <a class="nav-link" href="/videogames">All Video Games</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/<%= current_user.id %>">Your Video Games</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log Out</a>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="/">Sign up/ Log in</a>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="wrapper">

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2021 <strong>Video Game Collection</strong></small>
      </footer>
    </div>

