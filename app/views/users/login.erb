<html>
  <h3>Log In</h3><br>
  <% if !!@error %>
      <strong>Error!</strong> <%= @error %>
  <% end %>

  <form action='/login' method="POST">
    <input type="text" name="email" placeholder="email">
    <input type="password" name="password" placeholder="password">
    <button type="submit">Log in</button>
  </form>
</html>