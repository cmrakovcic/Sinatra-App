<html>
  <head>
    <style>
      * {
           text-align: center;
      }
      h1 {
           color: #DC143C;
      }
      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #DC143C;
      }
      li {
        float: center;
      }
      li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }
      li a:hover {
        background-color: #2F4F4F;
      }
      .active {
        background-color: #4CAF50;
      }
    </style>
  </head>
  <body>
    <h1>All Video Games</h1>
    <p>
      <% @videogames.each do |videogame| %>
        <ol>
          <strong>
          <a href="/videogames/<%= videogame.id %>"><%= videogame.title %></a> 
          </strong> | <%= videogame.date_purchased %>
        </ol>
      <% end %>
    </p>
  </body>
