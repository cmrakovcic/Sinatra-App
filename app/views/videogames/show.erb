<html>
  <head>
    <style>
      * {
           text-align: center;
      }
      h1 {
           color: #DC143C;
      }
      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #DC143C;
      }
      li {
        float: center;
      }
      li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }
      li a:hover {
        background-color: #2F4F4F;
      }
      .active {
        background-color: #4CAF50;
      }
    </style>
  </head>
  <body>
    <h1><%= @videogame.title %></h1>
      <p>
        Date Purchased: <%= @videogame.date_purchased %>
      </p>
      <ul>
      <li><a href="/videogames">Video Games</a></li>
      <li><a href="/videogames/<%= @videogame.id %>/edit">Edit</a></li>
      <li><p><form method="POST" action="/videogames/<%= @videogame.id %>">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete This Video Game">
      </form></p></li>
    </ul>
  </body>
</html>