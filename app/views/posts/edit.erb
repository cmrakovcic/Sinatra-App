<h2>Edit Video Game Entry</h2>

<form action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p><label for="post_name">Post Name: </label>
    <input type="text" id="name" name="post[name]"
    value="<%= @post.name %>"></p>
  <p><label for="post_year_completed">Year Completed: </label>
    <input type="text" id="year_completed" name="post[year_completed]"
    value="<%= @post.year_completed %>"></p>
  <p><input type="submit" value="Edit Post"></p>
</form>


<a class="button" href="/posts">Posts</a>
<a class="button" href="/">Home</a>